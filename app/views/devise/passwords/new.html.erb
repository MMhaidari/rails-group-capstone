<div class="container mx-auto mt-10 flex justify-center items-center">
  <div class="w-full max-w-sm">
    <h2 class="text-3xl font-semibold mb-4">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "px-6 py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
