<div class="container mx-auto mt-10 flex justify-center items-center">
  <div class="w-full max-w-sm bg-white rounded-lg shadow-lg p-4">
    <h2 class="text-3xl font-semibold mb-4 text-center">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

       <div class="mb-4">
        <%= f.label :name, class: "block font-semibold" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :email, class: "block font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-sm text-gray-600">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block font-semibold" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-600">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block font-semibold" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "block font-semibold" %>
        <em class="text-sm text-gray-600">(we need your current password to confirm your changes)</em><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <div class="text-center">
        <%= f.submit "Update", class: "px-6 py-2 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
    <% end %>

    <h3 class="text-xl font-semibold mt-6">Cancel my account</h3>
    <div class="text-center">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "px-6 py-2 bg-red-500 text-white font-semibold rounded-lg hover:bg-red-600 focus:outline-none focus:ring focus:border-red-300 mt-2" %>
    </div>

    <%= link_to "Back", :back, class: "block mt-6 text-center text-blue-600 font-semibold hover:underline" %>
  </div>
</div>
