<div class="container mx-auto mt-10 flex justify-center items-center">
  <div class="w-full max-w-sm bg-white rounded-lg shadow-lg p-4">
    <h2 class="text-3xl font-semibold mb-4 text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="bg-red-200 text-red-800 p-4 rounded mb-4">
          <h2 class="font-semibold mb-2"><%= pluralize(resource.errors.count, "error") %> prohibited this food from being saved:</h2>
          <ul>
            <% resource.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :email, class: "block font-semibold" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block font-semibold" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 px-4 py-2 rounded-lg w-full focus:outline-none focus:ring focus:border-blue-300 border border-gray-300" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4">
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "font-semibold" %>
        </div>
      <% end %>

      <div class="text-center">
        <%= f.submit "Log in", class: "px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring focus:border-blue-300 transform transition-transform motion-reduce:transform-none" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
