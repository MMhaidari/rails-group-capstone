<div class="container mx-auto max-w-md">
  <div class="mb-6 flex justify-end">
    <% if current_user %>
      <%= link_to "Add inventory", new_inventory_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
    <% end %>
  </div>
  <% if @inventories.present? %>
    <% @inventories.each do |inventory| %>
      <div class="border border-gray-400 p-4 mb-4 flex flex-col md:flex-row">
        <div class="flex-shrink-0 md:mb-0 md:mr-4 w-24">
          <p class="text-lg font-bold text-sky-700"><%= inventory.name %></p>
          <!-- Move the "DELETE" button below the inventory name -->
          <div class="mt-4">
            <% if current_user %>
              <%= button_to "DELETE", inventory_path(inventory), method: :delete, class: "bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded", form: { data: { turbo_confirm: "Are you sure you want to delete this inventory?" }} %>
            <% else %>
              <p>N/A</p>
            <% end %>
          </div>
        </div>
        <div class="flex-grow">
          <p class="text-sm"><%= inventory.description %></p> <!-- Display the description for each inventory -->
        </div>
      </div>
    <% end %>
  <% else %>
    <h3 class="text-2xl font-semibold mb-4 text-center">Add New Inventory Currently You Do Not Have Any Inventory In The List</h3>
  <% end %>
</div>
