<div class="container mx-auto max-w-md">
  <div class="mb-6 flex justify-end"> 
    <% if current_user %>
    <%= link_to "Add inventory", new_inventory_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4" %>
    <% end %>
  </div>
  <table class="w-full border-collapse border border-gray-400">
    <thead>
      <tr class="bg-gray-200">
        <th class="border border-gray-400 px-4 py-2">Name</th>
        <th class="border border-gray-400 px-4 py-2">Action</th>              
      </tr>
    </thead>
    <tbody>
    <% @inventories.each do |inventory| %>
        <tr>
          <td class="border border-gray-400 px-4 py-2"><%= inventory.name %></td>
          <td class="border border-gray-400 px-4 py-2">        
            <% if current_user %>
             <%= button_to "DELETE", inventory_path(inventory), method: :delete, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
             <% else %>
             <p>N/A</p>
            <% end %> 
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
