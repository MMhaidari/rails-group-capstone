<% if current_user %>

 <li  aria-current="page">
          <%= link_to "Home", root_path, class: "block py-2 pl-3 pr-4 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500 dark:bg-blue-600 md:dark:bg-transparent" %>
        </li>
        <li>
           <%= link_to "Foods", foods_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent" %>
        </li>
        <li>
          <%= link_to "Recipes", root_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent" %>
        </li>
        <li>
          <%= link_to "Public Recipes", root_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent" %>
        </li>
        <li>
          <%= link_to "Inventories", inventories_path, class: "block py-2 pl-3 pr-4 text-white rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-blue-700 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent" %>
        </li>
  <li class="relative">
    <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block py-2 px-4 text-white rounded bg-red-500 hover:bg-red-600 font-semibold" %>
  </li>

<div class="relative inline-block">
  <!-- Dropdown button -->
  <button class="text-lg font-semibold text-orange-500 hover:text-orange-500" type="button">
    Options
  </button>
  <!-- Dropdown content -->
  <ul class="absolute hidden bg-white shadow-lg w-40">
    <!-- Option 1: Sign Out -->
    <li class="text-md font-semibold hover:text-orange-500 py-3 text-orange-500 hover:bg-gray-200">
      <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, redirect_to: root_path %>
    </li>
    <div class="border-t border-gray-200"></div>
    <!-- Option 2: Edit User -->
    <li class="text-md font-semibold hover:text-orange-500 py-3 text-orange-500 hover:bg-gray-200">
      <%= button_to 'Edit User', destroy_user_session_path, method: :delete, redirect_to: root_path %>
    </li>
  </ul>
</div>

<% else %>
  <li class="mx-3 text-lg font-semibold hover:text-orange-500">
    <%= link_to "Sign In", new_user_session_path, class: "block py-2 px-4 text-white rounded bg-blue-500 hover:bg-blue-600 font-semibold" %>
  </li>
<% end %>
