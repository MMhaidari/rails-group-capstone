<% if current_user %>
  <li class="mx-3 text-lg font-semibold hover:text-orange-500 text-orange-500">
    <%= button_to 'Sign Out', destroy_user_session_path, method: :delete, redirect_to: root_path %>
  </li>
<% else %>
  <li class="mx-3 text-lg font-semibold hover:text-orange-500">
    <%= link_to "Sign In", new_user_session_path, class: "nav-link active text-green-500" %>
  </li>
  <li class="mx-3 text-lg font-semibold hover:text-orange-500">
    <%= link_to "Sign Up", new_user_registration_path, class: "nav-link text-orange-600" %>
  </li>
<% end %>

