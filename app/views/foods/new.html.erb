<div class="container mx-auto max-w-sm">
  <div class="mb-6 bg-white rounded-lg shadow-lg p-4">
    <h2 class="text-3xl font-semibold mb-4 text-center">Add New Food</h2>

    <%= form_with(model: @food) do |form| %>
      <% if @food.errors.any? %>
        <div class="bg-red-200 text-red-800 p-4 rounded mb-4">
          <h2 class="font-semibold mb-2"><%= pluralize(@food.errors.count, "error") %> prohibited this food from being saved:</h2>
          <ul>
            <% @food.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :name, class: "block font-semibold mb-2" %>
        <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :measurement_unit, class: "block font-semibold mb-2" %>
        <%= form.text_field :measurement_unit, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :price, class: "block font-semibold mb-2" %>
        <%= form.text_field :price, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
      <div class="text-center">
        <%= form.submit "Save Food", class: "w-full px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring focus:border-blue-300 transform transition-transform motion-reduce:transform-none" %>
      </div>
    <% end %>
  </div>
</div>
