<section class="container mx-auto mt-8">
  <% if @public_recipes.present? %>
    <% @public_recipes.each do |recipe| %>
      <div class="border border-gray-300 rounded-lg p-4 mb-4 max-w-xl mx-auto">
        <div class="flex items-center justify-between">
          <div>
            <h2 class="text-xl font-semibold text-blue-600 hover:underline">
              <%= link_to recipe.name, recipe %>
            </h2>
            <p class="text-gray-600">By: <%= recipe.user.name %></p>
          </div>
          <div>
            <p class="text-gray-600">
              Total food items: <%= recipe.foods.count %>
            </p>
            <p class="text-gray-600">
              Total price: <%= number_to_currency(recipe.foods.sum { |public_food| public_food.price }) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h3 class="text-2xl font-semibold mb-4 text-center">There is currently no public recipe available</h3>
  <% end %>
</section>
