<div class="container mx-auto max-w-md">
  <div class="mb-6 flex justify-end">
    <% if current_user %>
      <%= link_to "Add Recipe", new_recipe_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded mt-4", id: "add-recipe-link" %>
    <% end %>
  </div>
  <% @recipes.each do |recipe| %>
<div class="border border-gray-400 p-4 mb-4 flex flex-col md:flex-row">
  <div class="flex-shrink-0 md:mb-0 md:mr-4 w-24">
    <p class="text-lg font-bold text-sky-700"><%= recipe.name %></p>
  </div>
  <div class="flex-grow">
    <p class="text-sm"><%= recipe.description %></p>
    <div class="mt-4">
      <p><%= link_to 'Show', recipe_path(recipe), class: "text-sky-500 underline" %></p>
    </div>
  </div>
  <div class="flex-shrink-0 md:ml-4 mt-4 md:mt-0">
    <%= button_to 'Remove', recipe_path(recipe),
                  method: :delete,
                  class: "bg-red-500 hover:bg-red-600 text-white px-2 py-1 rounded",
                  form: { data: { turbo_confirm: "Are you sure you want to delete this recipe?" }} %>
  </div>
</div>

  <% end %>
</div>
