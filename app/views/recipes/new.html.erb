<div class="container mx-auto max-w-sm">
  <div class="mb-6 bg-white rounded-lg shadow-lg p-4">
    <h2 class="text-3xl font-semibold mb-4 text-center">Add New Recipe</h2>

    <%= form_with(model: @recipe) do |form| %>
      <% if @recipe.errors.any? %>
        <div class="bg-red-200 text-red-800 p-4 rounded mb-4">
          <h2 class="font-semibold mb-2"><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>
          <ul>
            <% @recipe.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-4">
        <%= form.label :name, class: "block font-semibold mb-2" %>
        <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :preparation_time, class: "block font-semibold mb-2" %>
        <%= form.text_field :preparation_time, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :cooking_time, class: "block font-semibold mb-2" %>
        <%= form.text_field :cooking_time, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
      <div class="mb-4">
        <%= form.label :description, class: "block font-semibold mb-2" %>
        <%= form.text_field :description, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring focus:border-blue-300" %>
      </div>
      <div class="mb-4 flex items-center">
      <%= form.label :public, class: "block font-semibold mr-2" %>
      <%= form.check_box :public, class: "form-checkbox h-5 w-5" %>
      </div>
      <div class="text-center">
        <%= form.submit "Save Recipe", class: "w-full px-6 py-2 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 focus:outline-none focus:ring focus:border-blue-300 transform transition-transform motion-reduce:transform-none" %>
      </div>
    <% end %>
  </div>
</div>
